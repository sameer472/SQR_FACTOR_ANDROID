<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:id="@+id/award_type"
        android:layout_marginBottom="10sp"
        android:entries="@array/attachments"
        android:foreground="@drawable/gray_border"
        android:padding="10sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:id="@+id/award_amount"
        android:layout_marginBottom="10sp"
        android:background="@drawable/gray_border"
        android:gravity="center_vertical"
        android:hint="@string/award_amount"
        android:inputType="text"
        android:padding="15sp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:id="@+id/award_currency_unit"
        android:layout_marginBottom="10sp"
        android:entries="@array/currency"
        android:foreground="@drawable/gray_border"
        android:padding="10sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:id="@+id/award_details"
        android:layout_marginBottom="10sp"
        android:background="@drawable/gray_border"
        android:gravity="top"
        android:hint="@string/add_more_details_of_the_award_prize_nfor_the_competition"
        android:inputType="text"
        android:padding="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/award_remove"
        android:layout_marginBottom="10sp"
        android:text="Remove"/>

</LinearLayout>