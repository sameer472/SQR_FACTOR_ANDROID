<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/gradient"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                <include layout="@layout/fragment_search_page"></include>

            </android.support.v7.widget.Toolbar>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/search_recycler1"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear_red">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/White"
        android:weightSum="3">

        <Button
            android:id="@+id/red_newsFeedbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="News Feed"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#888da8"
            android:textAllCaps="false"
            android:background="@drawable/line_color"/>
        <Button
            android:id="@+id/red_whatsRedbtn"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="What's Red?"
            android:textAllCaps="false"
            android:textColor="@color/sqr"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/line_color"/>
        <Button
            android:id="@+id/red_Topbtn"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Top Contributors"
            android:textAllCaps="false"
            android:textColor="#888da8"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/line_color"/>
    </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/red_pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/red_recycler">
    </android.support.v7.widget.RecyclerView>
    </com.baoyz.widget.PullRefreshLayout>
            <include layout="@layout/layout_fab_view"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>