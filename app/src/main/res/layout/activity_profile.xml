<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/sqr"
                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="true"
                android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/profile_cover_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/home_banner"
                        android:scaleType="centerCrop"
                        android:layout_alignParentLeft="true"
                        android:adjustViewBounds="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:id="@+id/profile_short_bio"
                        android:text="SqrFactor India Pvt. Ltd"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="#FFF"/>

                    <ImageView
                        android:id="@+id/profile_profile_image"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:src="@drawable/avatar"
                        android:padding="3dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="100dp"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/profile_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textAllCaps="false"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:layout_marginTop="190sp"/>
                    <TextView
                        android:id="@+id/profile_profile_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_profile_name"
                        android:layout_centerHorizontal="true"
                        android:text=""
                        android:textAllCaps="false"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/profile_blueprintcnt"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/sqr"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/profile_portfoliocnt"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/sqr"/>

                    <TextView
                        android:id="@+id/profile_followerscnt"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/sqr"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/profile_followingcnt"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/sqr"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="40sp"
                        android:layout_height="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/profile_blueprintClick"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Blueprint"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:textColor="@drawable/selector_follow"/>

                    <TextView
                        android:id="@+id/profile_portfolioClick"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Portfolio"
                        android:textColor="@drawable/selector_follow"/>

                    <TextView
                        android:id="@+id/profile_followersClick"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Followers"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:textColor="@drawable/selector_follow"/>

                    <TextView
                        android:id="@+id/profile_followingClick"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Following"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:textColor="@drawable/selector_follow"/>

                    <ImageView
                        android:id="@+id/profile_about_morebtn"
                        android:layout_width="40sp"
                        android:layout_height="20sp"
                        android:src="@drawable/ellipsis"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center">
                    <Button
                        android:id="@+id/profile_editprofile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/edit_profile"
                        android:textColor="#000"
                        android:text="Edit Profile"
                        android:textAllCaps="false"
                        android:fontFamily="@font/roboto_medium"
                        android:paddingLeft="10sp"
                        android:paddingStart="10sp"
                        android:paddingRight="10sp"
                        android:paddingEnd="10sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:padding="10sp"-->
                        <!--android:focusableInTouchMode="true"-->
                        <!--android:orientation="horizontal">-->
                        <!--<ImageView-->
                            <!--android:id="@+id/profile_status_image"-->
                            <!--android:layout_width="45sp"-->
                            <!--android:layout_height="45sp" />-->

                        <!--<TextView-->
                            <!--android:id="@+id/profile_profile_write_post"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="45sp"-->
                            <!--android:background="@android:color/transparent"-->
                            <!--android:gravity="top"-->
                            <!--android:fontFamily="@font/roboto"-->
                            <!--android:hint="Share your thoughts here..."-->
                            <!--android:paddingEnd="10sp"-->
                            <!--android:paddingLeft="10sp"-->
                            <!--android:paddingRight="10sp"-->
                            <!--android:paddingStart="10sp"-->
                            <!--android:paddingTop="10sp"-->
                            <!--android:textSize="15sp"/>-->

                    <!--</LinearLayout>-->

                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light">
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
    <TextView
        android:id="@+id/noData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        app:layout_anchor="@+id/profile_recycler"
        android:text="You haven't posted anything yet."
        android:textColor="@color/sqr"
        android:textSize="16dp"/>
    <ProgressBar
        android:id="@+id/progress_bar_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_anchor="@+id/profile_recycler"
        app:layout_anchorGravity="top|center" />
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/profile_recycler"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        </android.support.v7.widget.RecyclerView>
        <include layout="@layout/layout_fab_view"/>
    </android.support.design.widget.CoordinatorLayout>