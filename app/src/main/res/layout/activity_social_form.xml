<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".SocialFormActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/upload_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:background="@drawable/gray_border"
            android:src="@drawable/upload_image"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/userFirstName"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:padding="10sp"
            android:background="@drawable/shapes"
            app:hintTextAppearance="@color/colorPrimary">

            <EditText
                android:id="@+id/userFirstName_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:hint="First Name"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:padding="5sp" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/userLastName"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:padding="10sp"
            android:background="@drawable/shapes"
            app:hintTextAppearance="@color/colorPrimary">

            <EditText
                android:id="@+id/userLastName_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:hint="Last Name"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:padding="5sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:padding="10sp"
            android:background="@drawable/shapes"
            app:hintTextAppearance="@color/colorPrimary">

            <EditText
                android:id="@+id/userName_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:hint="User Name"
                android:fontFamily="@font/roboto"
                android:inputType="text"
                android:padding="5sp" />

        </android.support.design.widget.TextInputLayout>



        <Spinner
            android:id="@+id/social_country_spinner"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_margin="10sp"
            android:background="@drawable/gray_border"
            android:padding="5sp"
            android:entries="@array/countries"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/user_mobile_number"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:padding="10sp"
            android:background="@drawable/shapes"
            app:hintTextAppearance="@color/colorPrimary">

            <EditText
                android:id="@+id/user_mobile_number_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:hint="Mobile No."
                android:fontFamily="@font/roboto"
                android:inputType="number"
                android:padding="5sp" />

        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/social_submit"
            android:layout_gravity="center"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto"
            android:layout_margin="5dp"
            android:background="@drawable/sqr_factor_btn_color"/>
    </LinearLayout>
</ScrollView>
