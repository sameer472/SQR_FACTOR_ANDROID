<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result_prize"
            android:text="Day Winner - 1"
            android:fontFamily="@font/roboto"
            android:layout_marginBottom="8dp"
            android:textColor="#000"
            android:layout_margin="5sp"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/result_cover"
            android:src="@drawable/no_image_placeholder"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result_title"
            android:layout_gravity="center"
            android:text="Design1"
            android:fontFamily="@font/roboto"
            android:textColor="#000"
            android:layout_margin="5sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result_code"
            android:layout_gravity="center"
            android:text="YDAS365JQ9"
            android:fontFamily="@font/roboto"
            android:textColor="#000"
            android:layout_marginBottom="5sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/gray_border">

            <Button
                android:id="@+id/result_like"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:text="Like"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_like"
                android:drawableStart="@drawable/ic_like"
                android:background="@android:color/transparent"
                android:paddingLeft="10sp"
                android:paddingStart="10sp"
                android:paddingRight="10sp"
                android:paddingEnd="10sp"
                android:textColor="@android:color/tertiary_text_dark"
                android:gravity="start|center_vertical"
                android:drawablePadding="10sp"/>

            <Button
                android:id="@+id/result_comment"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:text="Comment"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:drawableLeft="@drawable/comment_xml"
                android:drawableStart="@drawable/comment_xml"
                android:background="@android:color/transparent"
                android:textColor="@android:color/tertiary_text_dark"
                android:gravity="start|center_vertical"
                android:drawablePadding="10sp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>