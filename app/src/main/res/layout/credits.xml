<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/White"
    tools:context=".Credits">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <android.support.v7.widget.Toolbar
            android:id="@+id/credits_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scroll_credits"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">


                <ImageView
                    android:id="@+id/profile_cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/home_banner"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    android:adjustViewBounds="true"/>


                <ImageView
                    android:id="@+id/profile_profile_image"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:padding="3dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:background="@color/white"
                    android:src="@drawable/avatar" />

                <TextView
                    android:id="@+id/profile_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginTop="190sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/Credits_address"
                    android:ellipsize="end"
                    android:layout_below="@+id/profile_profile_name"
                    android:maxLines="2"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/Credits_shortBio"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginTop="25dp"
                    android:text="SqrFactor India Pvt. Ltd"
                    android:fontFamily="@font/roboto_thin"
                    android:textColor="#FFF"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="4">

                <TextView
                    android:id="@+id/profile_blueprintcnt"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/sqr"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/profile_portfoliocnt"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/sqr"/>

                <TextView
                    android:id="@+id/profile_followerscnt"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/sqr"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/profile_followingcnt"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/sqr"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="40sp"
                    android:layout_height="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:weightSum="4">

                <TextView
                    android:id="@+id/profile_blueprintClick"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Blueprint"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:textColor="@drawable/selector_follow"/>

                <TextView
                    android:id="@+id/profile_portfolioClick"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Portfolio"
                    android:textColor="@drawable/selector_follow"/>

                <TextView
                    android:id="@+id/profile_followersClick"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Followers"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:textColor="@drawable/selector_follow"/>

                <TextView
                    android:id="@+id/profile_followingClick"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Following"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:textColor="@drawable/selector_follow"/>

                <ImageView
                    android:id="@+id/profile_about_morebtn"
                    android:layout_width="40sp"
                    android:layout_height="20sp"
                    android:src="@drawable/ellipsis"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:gravity="center">
                <Button
                    android:id="@+id/profile_editprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/edit_profile"
                    android:textColor="#000"
                    android:text="Edit Profile"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingLeft="10sp"
                    android:paddingStart="10sp"
                    android:paddingRight="10sp"
                    android:paddingEnd="10sp"/>
            </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="15sp"
            android:text="You haven't posted any articles yet. Go ahead and create some amazing articles!" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To know more, read "
            android:fontFamily="@font/roboto"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="faqs"
            android:fontFamily="@font/roboto"
            android:textColor="@color/sqr"/>

    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:gravity="center_vertical"
                android:id="@+id/headingLayout"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:text="Article"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/gray_border"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:text="Total Views"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/gray_border"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="20sp"
                    android:layout_height="match_parent"
                    android:text="1st Week views"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/gray_border"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:text="Credits"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/sqr"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/gray_border"
                    android:padding="5dp"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView_credit"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp">

            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="5sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/prevPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prev"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/White"
                    android:textAllCaps="false"
                    android:background="@drawable/backgroundbutton"/>
                <Button
                    android:id="@+id/nextPage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:text="Next"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/White"
                    android:textAllCaps="false"
                    android:background="@drawable/backgroundbutton"
                    android:layout_marginLeft="5sp" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>